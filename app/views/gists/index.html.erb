<% @gists.each do |gist| %>
  <h2><%= link_to gist.filename, gist %></h2>
  <p><%= gist.description %></p>
  <div style="border: 1px solid #001a33; height: 100px; padding: 10px">
    <p><%= gist.code %></p>
  </div>
  <p>Created at <%= gist.created_at.strftime("%d %b. %Y") %>, <%= gist.created_at.strftime("%H:%M") %></p>

<% end %>
